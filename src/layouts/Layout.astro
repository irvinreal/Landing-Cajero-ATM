---
interface Props {
  title: string
}

const { title } = Astro.props

import SimulationTag from '../components/SimulationTag.astro'
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Simulación de cajero atm virtual' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
  </head>
  <body class='h-full pt-32 relative'>
    <SimulationTag />
    <h1 class='bg-gray-300 font-bold text-4xl py-2 ps-14 text-white drop-shadow-md'>
      <span class='drop-shadow-lg text-gray-600'>Bienvenido a tu Cajero Automático</span>
    </h1>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #ffffff;
    height: 100vh;
  }
</style>
