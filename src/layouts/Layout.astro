---
interface Props {
  title: string
}

const { title } = Astro.props
const pathname = Astro.url.pathname

import SimulationTag from '../components/SimulationTag.astro'
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Simulación de cajero atm virtual' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
  </head>
  <body class=`h-full pt-6 md:pt-32 relative ${!pathname.endsWith('/my-account') ? 'bg-gray-900': ''} md:bg-white`>
    <SimulationTag />
    <h1 class='bg-gray-400 md:bg-gray-300 font-bold text-4xl py-2 px-8 md:px-0 md:ps-14 text-white drop-shadow-lg md:drop-shadow-md'>
      <span class='drop-shadow-lg text-gray-700 md:text-gray-600'>Bienvenido a tu Cajero Automático</span>
    </h1>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background: #ffffff;
    height: 100vh;
  }
</style>
